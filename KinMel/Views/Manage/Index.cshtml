@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}
<partial name="_StatusMessage" model="@Model.StatusMessage" />
<div class="card-header">
    Edit Profile
</div>
<div class="row m-0">
    <form method="post">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control ml-40 mb-0" disabled />
            <p class="m-0 ml-40 grey-text text-darken-1">Your username cannot be changed.</p>
        </div>
        <div class="input-field col s12 m6">
            <i class="material-icons prefix">person_outline</i>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="ml-40" />
            <span asp-validation-for="FirstName" class="red-text"></span>
        </div>
        <div class="input-field col s12 m6">
            <i class="material-icons prefix">person_outline</i>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="ml-40" />
            <span asp-validation-for="LastName" class="red-text"></span>
        </div>
        <div class="input-field col s12">
            <i class="material-icons prefix">mail_outline</i>
            <label asp-for="Email"></label>
            @if (Model.IsEmailConfirmed)
            {
                <div class="input-group">
                    <input asp-for="Email" class="form-control ml-40" />
                    <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                </div>
            }
            else
            {
                <input asp-for="Email" class="form-control ml-40" />
                <button asp-action="SendVerificationEmail" class="transparent blue-text p-0 ml-40" style="border:none; cursor: pointer;">Verify your email</button>
            }
            <span asp-validation-for="Email" class="red-text"></span>
        </div>
        <div class="input-field col s12">
            <i class="material-icons prefix">smartphone</i>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control ml-40" />
            <span asp-validation-for="PhoneNumber" class="red-text"></span>
        </div>
        <div class="input-field col s12 m6">
            <i class="material-icons prefix">place</i>
            <label asp-for="Address"></label>
            <input asp-for="Address" class="ml-40" />
            <span asp-validation-for="Address" class="red-text"></span>
        </div>
        <div class="input-field col s12 m6">
            <i class="material-icons prefix">place</i>
            <label asp-for="City"></label>
            <input asp-for="City" class="ml-40" />
            <span asp-validation-for="City" class="red-text"></span>
        </div>

        <button type="submit" class="btn btn-default mb-20 right">Save</button>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
