@model IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}

<div>
    <div class="card-header">
        Edit Profile
    </div>
    <div class="card-content">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-field">
                <i class="material-icons prefix">account_circle</i>
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control ml-40" disabled />
            </div>
            <div class="input-field mb-30">
                <i class="material-icons prefix">mail_outline</i>
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control ml-40" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control ml-40" />
                    <a asp-action="SendVerificationEmail" class="ml-40">Verify your email</a>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-field">
                <i class="material-icons prefix">smartphone</i>
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control ml-40" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="input-field col s12 m6 p-0">
                <i class="material-icons prefix">person_outline</i>
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="ml-40" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="input-field col s12 m6 p-0">
                <i class="material-icons prefix">person_outline</i>
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="ml-40" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="input-field col s12 m6 p-0">
                <i class="material-icons prefix">place</i>
                <label asp-for="Address"></label>
                <input asp-for="Address" class="ml-40" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="input-field col s12 m6 p-0">
                <i class="material-icons prefix">place</i>
                <label asp-for="City"></label>
                <input asp-for="City" class="ml-40" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default right">Save</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
