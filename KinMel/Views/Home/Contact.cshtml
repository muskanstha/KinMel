<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<div class="card-panel card-panel-large z-depth-4">
    <div class="row">
        <div class="input-field col s6">
            <i class="material-icons prefix">account_circle</i>
            <input id="name"  type="text" class="active validate" required />
            <label for="name">Full Name</label>
        </div>

        <div class="input-field col s6">
            <input id="phone" type="number" class="validate" required />
            <label for="phone">Phone Number</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12">
            <input id="email" type="text" class="validate" required>
            <label for="email">Email</label>
        </div>
    </div>
    

    <div class="row">
        <div class="input-field col s12">
            <i class="material-icons prefix">mode_edit</i>
            <textarea id="subject" class="materialize-textarea"></textarea>
            <label for="subject">Subject</label>
        </div>
    </div>

