@{
    ViewData["Title"] = "Home Page";
}

<section class="browse-width section">
    <div class="page-container-grid">
        <!--Side-Content-->
        @await Html.PartialAsync("_categoriesSideMenu")
        <!--Main-Content-->
        <div class="index-content">
            <div>@await Component.InvokeAsync("HomePageAds", new { listType = "Latest Ads" })</div>
            <div>@await Component.InvokeAsync("HomePageAds", new { listType = "name" })</div>
            <div>@await Component.InvokeAsync("HomePageAds", new { listType = "Free Ads" })</div>
            <div>@await Component.InvokeAsync("HomePageAds", new { listType = "default" })</div>
        </div>
    </div>
</section>
