@using Microsoft.AspNetCore.Mvc.Rendering;
@using System.Collections.Generic;

<div class="row m0">
    <div class="right display-flex">
        <!--sorting-->
        <b class="sort-text">Sort Ads by:</b>
        @{
            var sortList = new SelectList(new List<SelectListItem>
            {
                new SelectListItem { Value = "date_desc", Text = "Latest Ads" },
                new SelectListItem { Value = "Date", Text = "Older Ads First" },
                new SelectListItem { Value = "Price", Text = "Price: Low to High"  },
                new SelectListItem { Value = "price_desc", Text = "Price: High to Low"  },
            }, "Value", "Text", Context.Request.Query["sortOrder"]);
        }
        <select id="sortSelect" asp-items="@sortList" onchange="window.location.href = '/@ViewContext.RouteData.Values["Controller"]?sortOrder=' + this.options[this.selectedIndex].value"></select>
        @*<div class="col s2 center"><a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.DateCreated)</a></div>
            <div class="col s2 center"><a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]">@Html.DisplayNameFor(model => model.Price)</a></div>*@
    </div>
</div>
<hr />