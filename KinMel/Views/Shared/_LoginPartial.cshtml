@using Microsoft.AspNetCore.Identity
@using KinMel.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="right hide-on-med-and-down">
        <ul class="right hide-on-med-and-down">

            <!-- Notification Dropdown Trigger -->
            <li>
                <a class="dropdown-trigger" data-target="notificationdropdown">Notifications <span style="color: red;" id="notificationCount"></span></a>
            </li>

            <!-- Dropdown Trigger -->
            <li>
                <a class="dropdown-trigger" href="#!" data-target="navbardropdown">Hello @UserManager.GetUserName(User)!<i class="material-icons right">arrow_drop_down</i></a>
            </li>

        </ul>
    </form>

    <ul id="navbardropdown" class="dropdown-content">
        <li>
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" style="width: 100%">Edit Profile</a>
        </li>
        <li class="divider"></li>
        <li>
            <button type="submit" class="waves-effect waves-light btn-large" style="width: 100%">Log out</button>
        </li>
    </ul>

    <ul id="notificationdropdown" class="dropdown-content" style="min-width: 30vw !important;">
        @await Component.InvokeAsync("Notification")
    </ul>
}
else
{
    <ul class="right hide-on-med-and-down">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>

    <ul id="nav-mobile" class="sidenav">
        <li><a asp-area="" asp-controller="ClassifiedAds" asp-action="Index">Browse Ads</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
