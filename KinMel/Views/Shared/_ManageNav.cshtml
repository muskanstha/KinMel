@using KinMel.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills nav-stacked">
    <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a asp-controller="Manage" asp-action="Index">Edit Profile</a></li>
    <li class="@ManageNavPages.CreateAdNavClass(ViewContext)"><a asp-controller="Manage" asp-action="CreateAd">Post a new Ad</a></li>
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a asp-controller="Manage" asp-action="ChangePassword">Change Password</a></li>
    <li class="@ManageNavPages.ProfilePictureNavClass(ViewContext)"><a asp-controller="Manage" asp-action="ProfilePicture">Upload Profile Picture</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a asp-controller="Manage" asp-action="ExternalLogins">External logins</a></li>
    }
    <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a asp-controller="Manage" asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
</ul>

