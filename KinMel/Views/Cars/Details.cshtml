@model KinMel.Models.Car

@{
    ViewData["Title"] = "Details";
}

<div class="container index-content">
    <div class="card-header" style="margin-top: 5px;"><h5>@Model.Title</h5></div>
    <div class="card-header" style="margin-top: 5px;">    <h6>NRs.@Model.Price</h6></div>
    <div class="row" style="width: 100%">
        <div class="col s12">
            <div class="row">
                <div class="card-panel grey lighten-5  col  s12 m12 l6">
                    <div class="row valign-wrapper">
                        <div class="col s2">
                            <img src="@Model.CreatedByUser.ProfilePictureUrl" alt="" class="circle responsive-img">
                        </div>
                        <div class="col s10">
                            <label class="">Created at @Html.DisplayFor(m => m.DateCreated) By:</label>
                            <p>
                                <a asp-controller="Account" asp-action="UserProfile" asp-route-id="@Model.CreatedByUser.UserName">
                                    @Model.CreatedByUser.UserName
                                </a>
                            </p>
                            <p>
                                @Model.CreatedByUser.City
                                <span style="float: right;">
                                    <i class="material-icons align-middle p5">access_time</i>
                                    User Since: @Html.DisplayFor(model => model.CreatedByUser.JoinDate)
                                </span>
                            </p>
                        </div>
                    </div>

                </div>
                <div class="nav-divider"></div>
                <div class="card-panel grey lighten-5  col s12 m12 l6">
                    <div class="row valign-wrapper">
                        <div class="col s2">
                            <img src="@Model.CreatedByUser.ProfilePictureUrl" alt="" class="circle responsive-img">
                        </div>
                        <div class="col s10">
                            <label class="">Created at @Html.DisplayFor(m => m.DateCreated) By:</label>
                            <p>
                                <a asp-controller="Account" asp-action="UserProfile" asp-route-id="@Model.CreatedByUser.UserName">
                                    @Model.CreatedByUser.UserName
                                </a>
                            </p>
                            <p>
                                @Model.CreatedByUser.City
                                <span style="float: right;">
                                    <i class="material-icons align-middle p5">access_time</i>
                                    User Since: @Html.DisplayFor(model => model.CreatedByUser.JoinDate)
                                </span>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col s12">
                <div class="card-header">Description</div>
                @Model.Description

            </div>
        </div>
        <div class="col s12">
            <div id="details-carousel" class="carousel carousel-slider">
                <a class="carousel-item"><img src="@Model.PrimaryImageUrl"></a>
                @if (Model.ImageUrlList.Any())
                {
                    foreach (var item in Model.ImageUrlList)
                    {
                        <a class="carousel-item"><img src="@item"></a>
                    }
                }
            </div>
        </div>
    </div>



    <div class="divider"></div>
    <div class="col s12">
        <div class="row">
            <div class="col s6">
                <div class="card-header">Specifications</div>
            </div>
            <div class="col s6 fields-list">
                <div class="card-header">General Details</div>
                <ul>
                    <li>
                        <label asp-for="@Model.PriceNegotiable"></label>
                        <p> @Html.DisplayFor(m => m.PriceNegotiable)</p>
                    </li>
                    <li>
                        <label asp-for="@Model.Condition"></label>
                        <p> @Html.DisplayFor(m => m.Condition)</p>
                    </li>
                    <li>
                        <label asp-for="@Model.UsedFor"></label>
                        <p> @Html.DisplayFor(m => m.UsedFor)</p>
                    </li>

                    <li>
                        <label asp-for="@Model.Address"></label>
                        <p> @Html.DisplayFor(m => m.Address)</p>
                    </li>
                    <li>
                        <label asp-for="@Model.City"></label>
                        <p> @Html.DisplayFor(m => m.City)</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col s12">
        @await Component.InvokeAsync("Questions", new { id = Model.Id })

        <form asp-area="" asp-controller="Questions" asp-action="Create" method="post">
            <input name="Text" />
            <input name="ClassifiedAdId" hidden value="@Model.Id" />

            <button type="submit" value="Create" class="btn">Submit Question</button>
        </form>
    </div>

</div>

