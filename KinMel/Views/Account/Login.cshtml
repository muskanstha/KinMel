@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Log in";
}
<div class="page-container">
    <div class="row">
        <div class="card-panel z-depth-4">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-field row">
                    <h4 class="center m0">KinMel</h4>
                </div>
                <div class="input-field">
                    <i class="material-icons prefix">person_outline</i>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="input-field">
                    <i class="material-icons prefix">lock_outline</i>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="checkbox">
                        <input asp-for="RememberMe" type="checkbox" />
                        <label asp-for="RememberMe"></label>
                    </div>
                </div>
                <div class="input-field">
                    <button type="submit" class="btn waves-effect waves-light col s12">Log in</button>
                </div>
                <div class="row m0">
                    <div class="input-field col s6 m6 l6 m0 p0">
                        <p><a asp-action="ForgotPassword" class="red-text">Forgot password?</a></p>
                    </div>
                    <div class="input-field col s6 m6 l6 right-align m0 p0">
                        <p><a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
